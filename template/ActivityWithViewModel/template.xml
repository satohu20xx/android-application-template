<?xml version="1.0"?>
<template
    format="5"
    revision="5"
    name="Activity with ViewModel"
    description="Creates a new empty activity with ViewModel">

    <category value="Choilabo" />

    <parameter
        id="className"
        name="class name"
        type="string"
        constraints="class|unique|nonempty"
        default="Xxx"
        help="prefix class name. XxxActivity" />

    <parameter
        id="resourceName"
        name="resource name"
        type="string"
        constraints="class|unique|nonempty"
        default="xxx"
        help="prefix layout name. xxx_activity" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
